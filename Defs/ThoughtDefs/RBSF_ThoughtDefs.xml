<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<!--====================== Ability Thoughts ======================-->
	<!-- Thought given to pawns constricted by the ChokevineGrip Ability -->
  
	<ThoughtDef>
		<defName>RBSFE_ConstrictedThoughtLong</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>RBSF_VineWrapHeDiffLong</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<stages>
			<li>
				<label>trapped in vines</label>
				<description>Ugh! Get these vines off of me!</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
			<!-- Spore Cloud - Good Trip Thought -->

	<ThoughtDef>
		<defName>RBSF_GoodTripThought</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>RBSF_GoodTripHediff</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<developmentalStageFilter>Adult</developmentalStageFilter>
		<stages>
			<li>
				<label>pleasant spore trip</label>
				<description>I can smell colours, I can see sounds...</description>
				<baseMoodEffect>7</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<!-- Spore Cloud - Bad Trip Thought -->

	<ThoughtDef>
		<defName>RBSF_BadTripThought</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>RBSF_BadTripHediff</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<developmentalStageFilter>Adult</developmentalStageFilter>
		<stages>
			<li>
				<label>bad spore trip</label>
				<description>Everything around me is so bright and fuzzy...</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	
	<!--====================== Gene Thoughts ======================-->
	<!-- Myotonia Thought -->
  
	<ThoughtDef>
		<defName>RBSF_MyotoniaThought</defName>
		<workerClass>Roos_Faun_Xenotype.ThoughtWorker_Myotonia</workerClass>
