		<bodyTypeMale>Thin</bodyTypeMale>
		<bodyTypeFemale>Thin</bodyTypeFemale>
		<spawnCategories>
			<li>SatyrandFaun</li>
		</spawnCategories>
		<skillGains>
			<li>
				<key>Intellectual</key>
				<value>7</value>
			</li>
			<li>
				<key>Crafting</key>
				<value>2</value>
			</li>
		</skillGains>
